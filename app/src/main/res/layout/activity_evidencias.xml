<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/evidencias_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.evidencias.EvidenciasActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarEvidencias"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Evidencias"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- Contenido -->
    <LinearLayout
        android:id="@+id/contentLayoutEvidencias"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="12dp">

        <!-- Barra de acciones para selección múltiple -->
        <LinearLayout
            android:id="@+id/bulkActionsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:paddingBottom="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBulkEditar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar obs."
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBulkEliminar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar" />
        </LinearLayout>

        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerEvidencias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_evidencia" />

        <!-- Vacío -->
        <TextView
            android:id="@+id/emptyViewEvidencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tienes evidencias registradas."
            android:textAlignment="center"
            android:padding="16dp"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

    </LinearLayout>

    <!-- FAB subir evidencias -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddEvidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:tint="@android:color/white"
        android:backgroundTint="@color/blue" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressUpload"
        style="@style/Widget.Material3.CircularProgressIndicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
